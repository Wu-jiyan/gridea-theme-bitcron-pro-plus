<html>

<head>
    <%- include('./_blocks/head', { siteTitle: `友情链接 - ${themeConfig.siteName}` }) %>
</head>

<body>
<div class="main gt-bg-theme-color-first">
        <div class="main-content">
            <%- include('./_blocks/header') %>
            <div class="friend-container">
                <div class="friend-detail">
                    <article>

                        <!-- <div class="post-content-wrapper"> -->
                            <div class="post-content">
                                <!-- <div class="friends-desc"> -->
                                <!-- </div> -->
                                <!-- <h3 id="linklist">友链列表</h3> -->
                                <% if (site.customConfig.friends) { %>
                                    <% site.customConfig.friends.forEach(function(friend) { %>
                                        <div class="friend-box">
                                            <img class="friend-avatar" src="<%= friend.siteLogo %>">
                                            <div class="flink-info">
                                                <% if(friend.siteLink == "/friendssq") { %>
                                                    <a class="selected active current nav__item link-instanted" href="<%= friend.siteLink %>" target="_Self"><%= friend.siteName %></a>
                                                    <% } else { %>
                                                        <a class="selected active current nav__item link-instanted" href="<%= friend.siteLink %>" target="_blank"><%= friend.siteName %></a>
                                                        <% } %>
                                                <br />
                                                <div class="selected active current nav__item link-instanted">
                                                    <%= friend.description %>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    暂无友链，快来申请吧！
                                <% } %>
                            </div>
                        <!-- </div> -->
                    </article>
                </div>
          <div class="main"><div class="main-inner"><div class="content">
	<article class="post">
	<div style="display:flex">
	<div class="md_block" id="md_block">
	<% if (site.customConfig.RoundShapeOne){ %>
	<div class="round-shape-one"></div>
	<% } %>
	 <%- site.customConfig.frienddesc %>
	<span id="footnote"></span>
	<div id = "warn"></div>
	</div>
	<div class="toc-container"></div>
	</div>
	<div id="fullPage"><canvas id="canvas"></canvas></div>
	</article>
	<div id="eof"><span><%= site.customConfig.EOFvalue %></span></div>
	<% if (site.customConfig.RoundShapeOne){ %>
	<div class="round-shape-one"></div>
	<% } %>

	<section>
	<div class="doc_comments">
	<% if (typeof commentSetting !== 'undefined' && commentSetting.showComment) { %>
	  	<% if (commentSetting.commentPlatform === 'gitalk') { %>
			<div id="gitalk-container"></div>
			<%- include('./_blocks/gitalk') %>
	  	<% } %>
		  
	  	<% if (commentSetting.commentPlatform === 'disqus') { %>
			<%- include('./_blocks/disqus') %>
		  <% } %>
    <% } else { %>
      		  <% if(typeof site.customConfig['valine']!=='undefined' && site.customConfig['valine']) { %>
       		      <%- include('./_blocks/valine') %>
            	<% } %>

	<% } %>
	</div></section>
            </div></div></div>
	</div>


            <%- include('./_blocks/footer') %>
	<script type="text/javascript" async src="<%= themeConfig.domain %>/media/js/prism.js"></script>
        </div>
    </div>
</body>

</html>
